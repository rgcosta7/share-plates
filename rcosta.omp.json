{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "alignment": "left",
      "segments": [

        {
          "type": "exit",
          "style": "diamond",
          "foreground": "#FFFFFF",
          "background": "#B7EBB9",
          "background_templates": [
              "{{ if gt .Code 0 }}#e91e63{{ end }}"
          ],
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": "<#193549>\uf7d0</>",
          "properties": {
              "always_enabled": true
          }
        },

        {
          "foreground": "#000000",
          "style": "plain",
          "template": ".",
          "type": "text"
        },

        {
          "type": "os",
          "style": "diamond",
          "background": "#F6AC0D",
          "foreground": "#100e23",
          "leading_diamond": "\ue0b6",
          "properties": {
            "arch": "\uf303",
            "debian": "\uf306",
            "fedora": "\uf30a",
            "linux": "\uf17c",
            "macos": "\uf179",
            "manjaro": "\uf312",
            "opensuse": "\uf314",
            "ubuntu": "\uf31b",
            "windows": "\uf17a"
          },
          "template": " {{.Icon}} {{ if .WSL }}WSL{{ end }} "
        },

        {
          "type": "session",          
          "style": "powerline",
          "background": "#F6AC0D",
          "foreground": "#100e23",
          "leading_diamond": "\uE0B6",
          "trailing_diamond": "\uE0B0",
          "template": "{{if .SSHSession }}\uF817 {{.UserName}}@{{.HostName}} {{else}} {{if .Root}} \uf0e7 {{.UserName}}@{{.HostName}} {{else}}{{.HostName}} \uf2be {{end}}{{end}}"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "background": "#04C1E1",
          "foreground": "#ffffff",
          "properties": {
            "folder_separator_icon": "/",
            "style": "folder",
            "home_icon": "\uf7db Home",
            "mapped_locations": {
              "C:\\Users": "\uf007 Users",
              "C:\\Windows": "\ue62a Windows"
            }
          },
          "template": " \ue5ff  {{ .Path }} "
        }

      ],
      "type": "prompt"
    },


    {
      "alignment": "right",
      "segments": [


        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#ffffff",
          "background": "#906cff",
          "properties": {
            "display_mode": "always"
          },          
          "template": " \uE235 {{ .Full }} "
        },

        {
          "foreground": "#1F212A",
          "background": "#1F212A",
          "style": "plain",
          "template": ".",
          "type": "text"
        },

        {
          "type": "owm",
          "style": "diamond",
          "powerline_symbol": "\uE0B0",
          "foreground": "#000000",
          "background": "#F6AC0D",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",          
          "template": "{{.Weather}} ({{.Temperature}}{{.UnitIcon}})",
          "properties": {
            "apikey": "4a5a063b126ec82729c1fbfe4e1cb628",
            "location": "EDINBURGH,GB",
            "units": "metric",
            "http_timeout": 400,
            "cache_timeout": 15
          }
        },

        {
         "type": "time",
          "style": "diamond",
          "background": "#F6AC0D",
          "foreground": "#000000",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b4",
          "properties": {
              "time_format": "15:04"
          },
          "template": "\uf49b {{ .CurrentDate | date .Format }}"
        }      
      ],
      "type": "prompt"
    },


    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#ff0000",
          "style": "plain",
          "template": " \uf071",
          "type": "root"
        },
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": " {{ .Name }} ",
          "type": "shell"
        },
        {
          "foreground": "#ffffff",
          "style": "plain",
          "template": "\uf054 ",
          "type": "text"
        }
      ],
      "type": "prompt"
    }

  ],
  "console_title_template": "{{if .Root}} \u26a1 {{end}}{{.UserName}} \u2794 üìÅ{{.Folder}}",
  "final_space": true,
  "secondary_prompt": {
    "background": "#ec9706",
    "foreground": "#100e23",
    "template": " \uf061 "
  },
  "version": 2
}
